{
  "name": "react-enhanced-hooks",
  "version": "2.0.1",
  "description": "A useful custom react hooks.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsup",
    "release": "pnpm run build && changeset publish",
    "lint": "tsc"
  },
  "publishConfig": {
    "access": "public"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": true,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deep-vadukiya/react-enhanced-hooks"
  },
  "keywords": [
    "javascript",
    "react",
    "custom",
    "hooks"
  ],
  "author": "Deep Vadukiya",
  "license": "ISC",
  "homepage": "https://github.com/deep-vadukiya/react-enhanced-hooks",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  }
}
